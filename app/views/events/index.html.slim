- if @events.count > 0
  .list-group
    - @events.each do |event|
      .list-group-item
        h2.list-group-item-heading= event.title
        p.list-group-item-text= event.description
        = link_to('edit event', edit_event_path(event), class: 'btn btn-primary')
        = link_to('show event', event_path(event), class: 'btn btn-primary')
        = link_to('delete event', event_path(event),  method: :delete, class: 'btn btn-primary')
        = link_to('add myself to event', event_registrations_path(event),  method: :post, class: 'btn btn-primary')
- else
  = 'There are no events'

= link_to('Create a new event', new_event_path, class: 'btn btn-primary')
